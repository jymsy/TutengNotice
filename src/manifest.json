{
  "name": "图腾",
  "version": "0.1",
  "description": "图腾 monitor",
  "permissions": [
    "cookies",
    "tabs",
    "http://*/*",
    "https://*/*",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "contextMenus"
  ],
  "icons": {
    "16": "48.png",
    "48": "48.png"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "48.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "48.png"
  ]
}